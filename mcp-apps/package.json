{
  "name": "censuschat-mcp-apps",
  "version": "0.1.0",
  "private": true,
  "description": "MCP Apps for CensusChat - Single-file HTML interactive components",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:data-table": "MCP_APP=data-table vite build",
