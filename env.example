# CensusChat Local Development Environment
# Copy this to .env for local development

# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=censuschat_dev
POSTGRES_USER=censuschat_user
POSTGRES_PASSWORD=censuschat_dev_password_2024
POSTGRES_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# DuckDB Configuration
DUCKDB_PATH=./data/census.duckdb
DUCKDB_MEMORY=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-only-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Census API Configuration
CENSUS_API_URL=https://api.census.gov
CENSUS_API_KEY=your-census-api-key-here
USE_LIVE_CENSUS_API=false
CENSUS_CACHE_TTL=3600
CENSUS_API_REQUESTS_PER_HOUR=400

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Optional Tools (uncomment to enable)
# PGADMIN_EMAIL=admin@localhost
# PGADMIN_PASSWORD=admin_password_2024

# Export Configuration
EXPORT_MAX_ROWS=50000
EXPORT_MAX_FILE_SIZE=104857600
EXPORT_TEMP_DIR=./temp/exports
EXPORT_CLEANUP_DELAY=3600000

# Development Features
DEBUG=*
ENABLE_SWAGGER=true
ENABLE_METRICS=true


