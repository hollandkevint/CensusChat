# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Environment files
[*.env*]
indent_size = 0
trim_trailing_whitespace = false